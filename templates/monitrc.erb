set daemon 120
set logfile /var/log/monit.log
set idfile /var/lib/monit/id
set statefile /var/lib/monit/state
set eventqueue
    basedir /var/lib/monit/events
    slots 100

<% if scope.lookupvar('monit::config::mail_server_ip') then %>
set mailserver <%= scope.lookupvar('monit::config::mail_server_ip') %> port <%= scope.lookupvar('monit::config::mail_server_port') %>
<% end %>
<% if scope.lookupvar('monit::config::notify_emails') then
	scope.lookupvar('monit::config::notify_emails').each do |email| %>set alert <%= email %>
<% end
end %>
<% if scope.lookupvar('monit::config::http_port') then %>
set httpd port <%= scope.lookupvar('monit::config::http_port') %> and
    use address localhost
    allow localhost
<% end %>
include <%= scope.lookupvar('monit::config::servicestub_dir')  %>/*
